<div id="tag-data">
	<ul>
		<li><a href="#tag-data-1">Causes</a></li>
		<li><a href="#tag-data-2">Orgs</a></li>
	</ul>
	<div id="tag-data-1">
		<div class="label">
			<label for="search_filter_cause">Help which cause?</label>
			<input name="search_filter_cause" type="text" value="" id="search_filter_cause"/>
		</div>
		<div id="filtered-cause">
  			<ul>
    			<% @causes.each do |cause| %>
        			<li id="<%= cause.id %>"><span class="name"><%= cause.name %></span> (<%= cause.count_all %>)</li>
    				<% end %>
  			</ul>
		</div>
	</div>

	<div id="tag-data-2">
		<div class="label">
			<label for="search_filter_org">Help who?</label>
			<input name="search_filter_org" type="text" id="search_filter_org"/>
		</div>
		<div id="filtered-org">
			<ul>
				<% @organisations.each do |org| %>
					<li><img width="50" height="25" src="<%= org.logo %>"/> <span class="name"><%= org.name %></span>
						<span style="font-style: italic;">
							<% org.causes.each do |cause| %>
							<br/><%= cause.name %>
							<% end %></span>
						</li>
						<% end %>
			</ul>
		</div>
	</div>
</div>