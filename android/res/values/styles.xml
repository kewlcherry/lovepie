<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="LoveTheme" parent="@android:style/Theme.Light.NoTitleBar"> 	
    </style> 
    
    <style name="Wrap">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="WrapWidth">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="WrapHeight">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Fill">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Fill.Vertical" parent="Fill">
    	<item name="android:orientation">vertical</item>
    </style>
    
    <style name="logo" parent="Wrap">
    	<item name="android:layout_height">120dp</item>
    	<item name="android:layout_marginTop">15dp</item>
    	<item name="android:padding">@dimen/gutter</item>
    	<item name="android:src">@drawable/logo_transparent</item>
    	<item name="android:scaleType">centerInside</item>
    	<item name="android:focusable">true</item>
    	<item name="android:focusableInTouchMode">true</item>
    </style>
    
    <style name="text" parent="WrapHeight">
    	<item name="android:textSize">20sp</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:shadowColor">#cccccc</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="main_text" parent="text">
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    </style>
    
    <style name="currency_text" parent="text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:textSize">32sp</item>
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    </style>
    
    <style name="amount_field" parent="Wrap">
		<item name="android:layout_width">125dp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:inputType">number</item>
    </style>
    
    <style name="charity_list" parent="Fill">
    
    </style>
    
    <style name="loading_text" parent="text">
    	<item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="paypal_layout" parent="WrapHeight">
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    	<item name="android:layout_marginRight">@dimen/gutter</item>
    	<item name="android:layout_height">45dp</item>
    	<item name="android:layout_margin">5dp</item>
    </style>
 
</resources>
