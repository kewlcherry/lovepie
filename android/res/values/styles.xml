<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="LoveTheme" parent="@android:style/Theme.Light.NoTitleBar"> 	
    </style> 
    
    <style name="Wrap">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="WrapWidth">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="WrapHeight">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Fill">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="Fill.Vertical" parent="Fill">
    	<item name="android:orientation">vertical</item>
    </style>
    
    <style name="Activity" parent="Fill.Vertical">
    	<item name="android:background">@drawable/background_noise</item>
    </style>
    
    <style name="logo" parent="Wrap">
    	<item name="android:layout_height">65dp</item>
    	<item name="android:layout_marginTop">@dimen/gutter</item>
    	<item name="android:layout_marginRight">@dimen/gutter</item>
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    	<item name="android:src">@drawable/logo_transparent</item>
    	<item name="android:scaleType">centerInside</item>
    	<item name="android:focusable">true</item>
    	<item name="android:focusableInTouchMode">true</item>
    </style>
    
    <style name="mini_logo" parent="logo">
    	<item name="android:layout_height">40dp</item>
    </style>
    
    <style name="text" parent="WrapHeight">
    	<item name="android:textSize">18sp</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textColor">@color/black</item>
    	<item name="android:shadowColor">@color/white</item>
    	<item name="android:shadowDx">2</item>
    	<item name="android:shadowDy">2</item>
    	<item name="android:shadowRadius">1</item>
    </style>
    
    <style name="main_text" parent="text">
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    </style>
    
    <style name="aux_text" parent="text">
    	<item name="android:textSize">18sp</item>
    	<item name="android:textStyle">normal</item>
    </style>
    
    <style name="currency_text" parent="text">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:textSize">32sp</item>
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    </style>
    
    <style name="amount_field" parent="Wrap">
		<item name="android:layout_width">113dp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:inputType">number</item>
		<item name="android:imeOptions">actionDone</item>
		<item name="android:singleLine">true</item>
    </style>
    
    <style name="charity_list" parent="Fill">
    	<item name="android:background">@color/white</item>
    	<item name="android:cacheColorHint">@color/white</item>
    </style>
    
    <style name="loading_text" parent="text">
    	<item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="paypal_layout" parent="WrapHeight">
    	<item name="android:layout_marginLeft">@dimen/gutter</item>
    	<item name="android:layout_marginRight">@dimen/gutter</item>
    	<item name="android:layout_height">45dp</item>
    	<item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="bar" parent="WrapHeight">
    	<item name="android:layout_height">@dimen/bar_height</item>
    	<item name="android:background">@color/lovepie_brown</item>
    </style>
    
    <style name="list_item" parent="WrapHeight">
    	<item name="android:layout_height">@dimen/li_height</item>
    </style>
    
    <style name="list_image" parent="Wrap">
    	<item name="android:layout_width">@dimen/li_height</item>
    	<item name="android:layout_height">@dimen/li_height</item>
    	<item name="android:layout_alignParentTop">true</item>
    	<item name="android:layout_alignParentLeft">true</item>
    	<item name="android:background">@color/white</item>
    	<item name="android:padding">@dimen/img_pad</item>
    </style>
    
    <style name="list_title" parent="WrapHeight">
    	<item name="android:singleLine">true</item>
    	<item name="android:ellipsize">end</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:layout_marginRight">5dp</item>
    	<item name="android:layout_marginLeft">5dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    </style>
    
    <style name="list_body" parent="WrapHeight">
    	<item name="android:ellipsize">end</item>
    	<item name="android:textColor">@color/lovepie_brown</item>
    	<item name="android:layout_marginRight">5dp</item>
    	<item name="android:layout_marginLeft">5dp</item>
    	<item name="android:layout_marginBottom">5dp</item>
    </style>
 
</resources>
